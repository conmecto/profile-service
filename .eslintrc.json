{   
  "env": {
    "node": true,
    "es2021": true
  },
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": [
    "quotes": [2, "single", { 
      "avoidavoidEscape": true, "allowTemplateLiterals": true 
    }]
  ]
}